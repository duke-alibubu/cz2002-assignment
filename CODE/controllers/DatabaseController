import java.io.FileWriter;
import java.io.IOException;
import java.io.Writer;
import java.util.ArrayList;
import java.io.File;

public class DatabaseController {
	
	public class Table{
		private ArrayList<String> Filenames;
		private ArrayList<String> Attributes;
	}
	
	public void addRecord(String Name, String Value, Table table) {
		// File location.
		String filePath = table.Filenames.toString();  //file path to be declared
		
		File file = new File(filePath);
		 
		// Content to append.
		String contentToAppend = "\r\n" + Name + "; " + Value.charAt(0) + "; " + Value.charAt(1);
		 
		// Set the second parameter of FileWriter to "true" to append to file.
		try (Writer fileWriter = new FileWriter(filePath, true)){
			if(file.exists()) {
			 fileWriter.write(contentToAppend);}
			else {fileWriter.write(table.Attributes.toString() + contentToAppend);};
		} catch (IOException e) {
			System.out.println("Problem occurs when deleting the directory : " + filePath);
			e.printStackTrace();}
	
	}
}
